@model ATMWebApp.Models.EstatisticaViewModel

@{
    ViewBag.Title = "Estatistica Sumária";
}

<h3>Estatística sumária</h3>
<hr />
<div>
    <table class="table table-striped table-bordered  ">
        <tr>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.TotalDeContas)
            </th>

            <td>
                @Html.DisplayFor(model => model.TotalDeContas)
            </td>
        </tr>
        <tr>

            <th class="text-right">
                @Html.DisplayNameFor(model => model.TotalDeTransacoes)
            </th>

            <td>
                @Html.DisplayFor(model => model.TotalDeTransacoes)
            </td>
        </tr>
        <tr>

            <th class="text-right">
                @Html.DisplayNameFor(model => model.ContaComMaiorSaldo)
            </th>

            <td>
                @Html.DisplayFor(model => model.ContaComMaiorSaldo.Numero) -   @Html.DisplayFor(model => model.ContaComMaiorSaldo.PrimeiroNome)   @Html.DisplayFor(model => model.ContaComMaiorSaldo.Apelido)
            </td>
        </tr>
        <tr>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.ContaComMaisTransacoes)
            </th>

            <td>
                @Html.DisplayFor(model => model.ContaComMaisTransacoes.Numero) -   @Html.DisplayFor(model => model.ContaComMaisTransacoes.PrimeiroNome)   @Html.DisplayFor(model => model.ContaComMaisTransacoes.Apelido)
            </td>
        </tr>
        <tr>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.ContasComMaiorSaldo)
            </th>

            <td class="col-sm-9">
                <table>
                    @foreach (var item in Model.ContasComMaiorSaldo)
                    {
                        <tr>
                            <td>

                                @Html.DisplayFor(modelItem => item.Numero) -   @Html.DisplayFor(modelItem => item.PrimeiroNome)   @Html.DisplayFor(model => item.Apelido) -  @Html.DisplayFor(model => item.Saldo)
                            </td>

                        </tr>
                    }
                </table>
        </tr>
        <tr>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.TotalDeTransacoesPorConta)
            </th>

            <td>
                <table>
                    @foreach (var item in Model.TotalDeTransacoesPorConta)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Conta.Numero) -   @Html.DisplayFor(modelItem => item.Conta.PrimeiroNome)   @Html.DisplayFor(model => item.Conta.Apelido)
                                <strong>(@Html.DisplayFor(model => item.Total) Transações)</strong>
                            </td>

                        </tr>
                    }
                </table>
        </tr>

    </table>
</div>